{
  "name": "turbo-view-transitions",
  "version": "0.1.0",
  "description": "View Transitions API for HTML-first applications",
  "scripts": {
    "test:dev": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test": "yarn test:dev --coverage && check-dts",
    "lint": "eslint . && prettier --check 'packages/**/*.{js,ts}'",
    "lint:fix": "eslint . --fix && prettier --check 'packages/**/*.{js,ts}' --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/palkan/turbo-view-transitions"
  },
  "keywords": [
    "view",
    "transiions",
    "hotwire",
    "turbo"
  ],
  "homepage": "https://github.com/palkan/turbo-view-transitions",
  "author": "Vladimir Dementyev",
  "license": "MIT",
  "sideEffects": false,
  "main": "index.js",
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "http://turbo.test/demo"
    },
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      ".*/testing.ts"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@logux/eslint-config": "^48.0.0",
    "@types/jest": "^29.4.0",
    "@types/jsdom": "^21.1.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "check-dts": "^0.7.0",
    "eslint": "^8.33.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "prettier": "^2.3.1",
    "typescript": "^4.9.5",
    "ts-jest": "^29.0.5"
  }
}
